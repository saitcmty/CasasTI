<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
  
        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <p>¿Cómo se llamará?:</p>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <p>¿Dónde será?:</p>
      <%= form.text_field :place %>
    </div>
  
    <div class="field date_select">
      <p>¿Cuándo comienza?</p>
      <div class="container d-flex">
        <%= form.datetime_select :start %>
      </div>
    </div>
  
    <div class="field date_select">
      <p>¿Cuándo termina?</p>
      <div class="container d-flex">
        <%= form.datetime_select :finish, :include_blank => true %>
      </div>
    </div>
  
    <div class="field">
      <p>Descripción vrgas:</p>
      <%= form.text_area :description %>
    </div>
  
    <div class="field">
      <span>Imagen vrgas (URL):</span>
      <%= form.text_field :img_url %>
    </div>
  
    <div class="field">
      <%= form.label :link %>
      <%= form.text_field :link %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  